<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".parent_manage">

    <ImageButton
        android:id="@+id/mem_pic"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/userpic"
        android:scaleType="fitXY"
        android:src="@drawable/userpic"
        app:layout_constraintBottom_toTopOf="@+id/par_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/login_baby"
        android:layout_width="102.75dp"
        android:layout_height="80dp"
        android:layout_marginTop="480dp"
        android:background="@drawable/car1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/login_inform"
        android:layout_width="102.75dp"
        android:layout_height="80dp"
        android:layout_marginTop="480dp"
        android:background="@drawable/car2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.334"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/login_post"
        android:layout_width="102.75dp"
        android:layout_height="80dp"
        android:layout_marginTop="480dp"
        android:background="@drawable/car3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.668"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/login_book"
        android:layout_width="102.75dp"
        android:layout_height="80dp"
        android:layout_marginTop="480dp"
        android:background="@drawable/car4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/mem_get"
        android:layout_width="276dp"
        android:layout_height="39dp"
        android:layout_marginTop="216dp"
        android:layout_marginBottom="8dp"
        android:text="接收推播通知"
        android:textColor="#646464"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/mem_edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        style="?android:attr/borderlessButtonStyle"
        android:textColor="#adadad"
        android:id="@+id/par_edit"
        android:layout_width="273dp"
        android:layout_height="51dp"
        android:layout_marginTop="276dp"
        android:layout_marginBottom="8dp"
        android:background="#e6e6f2"
        android:text="修改個人資料"
        android:gravity="center_vertical|left"
        android:textAllCaps="true"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/mem_edit_pw"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        style="?android:attr/borderlessButtonStyle"
        android:textColor="#adadad"
        android:id="@+id/mem_edit_pw"
        android:layout_width="273dp"
        android:layout_height="51dp"
        android:layout_marginTop="348dp"
        android:layout_marginBottom="8dp"
        android:text="修改密碼"
        android:gravity="center_vertical|left"
        android:background="#e6e6f2"
        android:textAllCaps="true"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/mem_logout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/mem_logout"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="207dp"
        android:layout_height="51dp"
        android:layout_marginBottom="8dp"
        android:background="#EBF0F0F0"
        android:text="登出帳號"
        android:textAllCaps="true"
        android:textColor="	#aaaaff"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.829" />

    <TextView
        android:id="@+id/par_name"

        android:layout_width="109dp"
        android:layout_height="39dp"
        android:layout_marginTop="136dp"
        android:layout_marginBottom="8dp"
        android:gravity="center_horizontal"
        android:text="姓名"
        android:textAllCaps="true"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/mem_get"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.121" />

</android.support.constraint.ConstraintLayout>